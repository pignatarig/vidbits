<div class="contents-container">
  <div class="video-card">

    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>
    
    <a href='/videos/{{video._id}}/edit' id='edit'>Edit</a>
    <form class="delete-form" action="/videos/{{video._id}}/deletions" method="post">
      <a id='delete' href="#" onclick="this.parentNode.submit();">
        <div class="button update-button">
          Delete
        </div>
      </a>
    </form>
  </div>
</div>